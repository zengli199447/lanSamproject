<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corners_white_dialog_bg"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/corners_red_dialog_bg"
        android:gravity="center"
        android:text="@string/personal_modify_password"
        android:textColor="@color/white"
        android:textSize="@dimen/text_content_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/grey2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/corners_edittext"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/old_password"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="25dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="原密码"
                android:inputType="textPassword"
                android:paddingLeft="3dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textCursorDrawable="@drawable/corners_edittext_cursor"
                android:textSize="14dp" />


            <View
                android:id="@+id/empty_old_view"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:alpha="0.5"
                android:background="@drawable/delet"
                android:visibility="invisible" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/corners_edittext"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="25dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="新密码"
                android:inputType="textPassword"
                android:paddingLeft="3dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textCursorDrawable="@drawable/corners_edittext_cursor"
                android:textSize="14dp" />

            <View
                android:id="@+id/empty_new_view"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:alpha="0.5"
                android:background="@drawable/delet"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/corners_edittext"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="25dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:paddingLeft="3dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textCursorDrawable="@drawable/corners_edittext_cursor"
                android:textSize="14dp" />

            <View
                android:id="@+id/empty_confirm_view"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:alpha="0.5"
                android:background="@drawable/delet"
                android:visibility="invisible" />

        </RelativeLayout>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/password_check"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:button="@drawable/check_tools"
            android:text="  显示密码 "
            android:textColor="@color/grey"
            android:textSize="@dimen/text_content_size" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/cancle"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/grey2" />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/commit"
            android:textColor="@color/green_style"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>