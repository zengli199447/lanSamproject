<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <ScrollView
        android:id="@+id/scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_layout"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sample_number_"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/sample_number_"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/time"
                android:layout_width="150dp"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="@string/time"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/office_sampling"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_below="@+id/sample_number_"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/office_sampling"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/sample_basic_information"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_below="@+id/office_sampling"
                android:layout_marginTop="10dp"
                android:background="@color/grey1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/sample_basic_information"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />


            <TextView
                android:id="@+id/division_code"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_below="@+id/sample_basic_information"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/division_code"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/any"
                android:layout_width="150dp"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/sample_basic_information"
                android:gravity="center_vertical"
                android:text="@string/any"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />


            <TextView
                android:id="@+id/county"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_below="@+id/division_code"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/county"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/villages_and_towns"
                android:layout_width="150dp"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/any"
                android:gravity="center_vertical"
                android:text="@string/villages_and_towns"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/village"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_below="@+id/county"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/village"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/view_null"
                android:layout_width="150dp"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/villages_and_towns"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/detailed_survey_unit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_below="@+id/village"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/detailed_survey_unit"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/point_number"
                android:layout_width="150dp"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/view_null"
                android:gravity="center_vertical"
                android:text="@string/point_number"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />


            <TextView
                android:id="@+id/longitude"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_below="@+id/detailed_survey_unit"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/longitude"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/latitude"
                android:layout_width="150dp"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/point_number"
                android:gravity="center_vertical"
                android:text="@string/latitude"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/layout_the_sample_type"
                android:layout_below="@+id/longitude"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_layout_pidding_max">

                <TextView
                    android:id="@+id/text"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/text_layout_pidding_max"
                    android:gravity="center_vertical"
                    android:text="@string/the_sample_type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_content_size" />

                <EditText
                    android:layout_toRightOf="@+id/text"
                    android:id="@+id/the_sample_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="25dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint=" 有机/无机"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textCursorDrawable="@drawable/corners_edittext_cursor"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/empty_input_view"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:alpha="0.5"
                    android:background="@drawable/delet"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/shelf_life_inspection"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_below="@+id/layout_the_sample_type"
                android:layout_marginTop="10dp"
                android:background="@color/grey1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/shelf_life_inspection"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/sample_monitoring"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_layout_pidding_max"
                android:layout_below="@+id/shelf_life_inspection"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="@string/sample_monitoring"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

            <View
                android:id="@+id/line_"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@+id/sample_monitoring"
                android:background="@color/grey" />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_layout_pidding"
                android:layout_below="@+id/line_"
                android:background="@color/grey"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0.1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/element_names"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_content_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0.1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/shelf_life"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_content_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/qualified"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_content_size" />

            </LinearLayout>

            <View
                android:id="@+id/line_t"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@+id/layout"
                android:background="@color/grey" />

            <com.example.administrator.landapplication.ui.view.AutoListView
                android:id="@+id/details_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_t"
                android:background="@color/white"
                android:divider="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:listSelector="@color/transparent"
                android:overScrollMode="never" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/requirements"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_layout_pidding"
                android:layout_below="@+id/details_list"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:button="@drawable/check_tools"
                android:text="  样品重量是否符合要求"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/container_material"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_layout_pidding"
                android:layout_below="@+id/requirements"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/container_material"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />


            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/good_condition"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_layout_pidding"
                android:layout_below="@+id/container_material"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:button="@drawable/check_tools"
                android:text="  样品瓶/袋是否完好"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_content_size" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/tag_good_condition"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_layout_pidding"
                android:layout_below="@+id/good_condition"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:button="@drawable/check_tools"
                android:text="  标签是否完好整洁"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_content_size" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/save_the_way"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_layout_pidding"
                android:layout_below="@+id/tag_good_condition"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:button="@drawable/check_tools"
                android:text="  保存方式（ 常温/低温/避光 ）是否合格"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_content_size" />

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/liner_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/commit"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:background="@drawable/login_button_bac"
                android:gravity="center"
                android:text="@string/commit"
                android:textColor="@color/white"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/refuse_to_accept"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:background="@drawable/login_button_bac"
                android:gravity="center"
                android:text="@string/refuse_to_accept"
                android:textColor="@color/white"
                android:textSize="@dimen/text_content_size" />

        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/grey" />

    </RelativeLayout>


</RelativeLayout>