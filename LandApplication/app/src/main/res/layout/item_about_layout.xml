<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:kevin="http://schemas.android.com/tools"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/id_pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/cancle"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="@string/cancle"
                android:textColor="@color/green_style"
                android:textSize="@dimen/text_content_size" />

            <TextView
                android:id="@+id/commit"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="@string/commit"
                android:textColor="@color/green_style"
                android:textSize="@dimen/text_content_size" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey2" />

        <com.weigan.loopview.LoopView
            android:id="@+id/loopview_m"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:awv_centerTextColor="@color/green_style"
            app:awv_outerTextColor="@color/grey"
            app:awv_textsize="16" />


    </LinearLayout>

</RelativeLayout>