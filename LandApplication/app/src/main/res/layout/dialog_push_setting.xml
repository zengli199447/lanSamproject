<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corners_white_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/corners_red_dialog_bg"
        android:gravity="center"
        android:text="@string/personal_push_setting"
        android:textColor="@color/white"
        android:textSize="@dimen/text_content_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/grey2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="推送时间  (默认24小时开启)"
            android:textColor="@color/black"
            android:textSize="@dimen/text_content_size" />


        <com.example.administrator.landapplication.ui.view.RangeSeekBar
            android:id="@+id/range_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="65dp"
            android:padding="5dp"
            app:cells="24"
            app:max="24" />

    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/grey2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/cancle"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/grey2" />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/commit"
            android:textColor="@color/green_style"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>