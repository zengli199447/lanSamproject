<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/corners_pop_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_status"
            android:layout_width="130dp"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/task_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/end" />

            <TextView
                android:id="@+id/stop_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/stop_task"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/grey"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:id="@+id/layout_change"
            android:layout_width="130dp"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/change" />

            <TextView
                android:id="@+id/the_change_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/the_change_request"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_size" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>