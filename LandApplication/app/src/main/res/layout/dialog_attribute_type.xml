<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/corners_white_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/about_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/corners_red_dialog_bg"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/text_content_size" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/about_type"
        android:background="@color/grey2" />

    <ScrollView
        android:id="@+id/scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:layout_marginBottom="50dp"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.administrator.landapplication.ui.view.AutoListView
                android:id="@+id/attrbute_type_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:listSelector="@color/transparent"
                android:overScrollMode="never" />

            <RelativeLayout
                android:id="@+id/layout_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/corners_edittext"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/about_edit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:hint="其他"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textCursorDrawable="@drawable/corners_edittext_cursor"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/empty_input_view"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:alpha="0.5"
                    android:background="@drawable/delet"
                    android:visibility="invisible" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/grey2" />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/commit"
            android:textColor="@color/green_style"
            android:textSize="15sp" />

    </RelativeLayout>


</RelativeLayout>