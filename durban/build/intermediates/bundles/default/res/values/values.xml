<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="durban_ColorPrimary">#2196F3</color>
    <color name="durban_ColorPrimaryBlack">#FF2B2B2B</color>
    <color name="durban_ColorPrimaryDark">#1E88E5</color>
    <color name="durban_ControllerBackground">@color/durban_ColorPrimaryBlack</color>
    <color name="durban_CropBackground">@color/durban_ColorPrimaryBlack</color>
    <color name="durban_CropDimmed">#8C000000</color>
    <color name="durban_CropFrameLine">#FFFFFFFF</color>
    <color name="durban_CropGridLine">#80FFFFFF</color>
    <color name="durban_CropLogo">#99FFFFFF</color>
    <color name="durban_White">#FFFFFFFF</color>
    <declare-styleable name="durban_CropView"><attr format="float" name="durban_aspect_ratio_x"/><attr format="float" name="durban_aspect_ratio_y"/><attr format="boolean" name="durban_show_oval_crop_frame"/><attr format="boolean" name="durban_circle_dimmed_layer"/><attr format="color" name="durban_dimmed_color"/><attr format="dimension" name="durban_grid_stroke_size"/><attr format="color" name="durban_grid_color"/><attr format="integer" name="durban_grid_row_count"/><attr format="integer" name="durban_grid_column_count"/><attr format="boolean" name="durban_show_grid"/><attr format="dimension" name="durban_frame_stroke_size"/><attr format="color" name="durban_frame_color"/><attr format="boolean" name="durban_show_frame"/></declare-styleable>
    <dimen name="durban_dp_1">1dp</dimen>
    <dimen name="durban_dp_10">10dp</dimen>
    <dimen name="durban_dp_100">100dp</dimen>
    <dimen name="durban_dp_16">16dp</dimen>
    <dimen name="durban_dp_200">200dp</dimen>
    <dimen name="durban_dp_30">30dp</dimen>
    <dimen name="durban_dp_70">70dp</dimen>
    <string name="durban_controller_title_rotation">旋转</string>
    <string name="durban_controller_title_scale">缩放</string>
    <string name="durban_menu_crop">确定</string>
    <string name="durban_title_crop">图片裁剪</string>
    <style name="durban_MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="durban_MatchParent.ItemRoot">
        <item name="android:layout_height">@dimen/durban_dp_70</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="durban_MatchParent.WidthWeight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="durban_MatchParent.WidthWeight.ControllerItem">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="durban_PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="durban_Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="titleTextColor">@color/durban_ColorPrimaryBlack</item>
        <item name="subtitleTextColor">@color/durban_ColorPrimaryBlack</item>
        <item name="theme">@style/durban_ToolbarTheme</item>
    </style>
    <style name="durban_Toolbar.PopupTheme">
        <item name="popupTheme">@style/durban_PopupOverlay</item>
    </style>
    <style name="durban_ToolbarTheme">
        <item name="actionMenuTextColor">@color/durban_White</item>
    </style>
    <style name="durban_WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="durban_WrapContent.ControllerButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="durban_WrapContent.WidthMatchParent">
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="durban_WrapContent.WidthWeight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="durban_WrapContent.WidthWeight.ControllerTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/durban_White</item>
    </style>
</resources>